{
  "compilerOptions": {
    "pretty": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "lib": [
      "es2016"
    ],
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts"
  ]
}
